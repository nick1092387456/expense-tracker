<form action="/records/{{ record._id }}?_method=PUT" method="POST" style="display: inline;">
  <div class="input-group">
    <div class="input-group-prepend">
      <div class="input-group-text">
        <input type="checkbox" name="isDone" {{#if record.isDone }} checked {{/if}}>
      </div>
    </div>
    <input class="form-control" type="text" placeholder="name" name="name" value="{{ record.name }}">
    <div class="input-group-append">
      <button class="btn btn-success" type="submit">Save</button>
    </div>
  </div>
</form>