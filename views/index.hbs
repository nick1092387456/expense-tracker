<ul>
  {{#each records}}
    <li>
      <input type="checkbox" name="isDone" {{#if this.isDone }} checked {{/if}} disabled>
      {{this.name}}
      <a href='./records/{{this._id}}'>detail</a>
      <a href='./records/{{this._id}}/edit'>edit</a>
      <form
        action='./records/{{this._id}}?_method=DELETE'
        method='POST'
        style='display: inline;'
      >
        <button type='submit'>delete</button>
      </form>
    </li>
  {{/each}}
</ul>